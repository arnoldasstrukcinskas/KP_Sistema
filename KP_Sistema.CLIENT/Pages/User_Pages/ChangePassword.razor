@page "/Users/changePassword"
@using Microsoft.AspNetCore.Authorization
@using System.Text.Json
@inject HttpClient Http
@inject IJSRuntime JS
@attribute [Authorize]

<PageTitle>Change Password - Community Utility Services</PageTitle>

<!-- Page Header -->
<div class="bg-custom text-white py-4 mb-4">
    <div class="container">
        <div class="d-flex align-items-center">
            <div>
                <h1 class="h2 mb-1">Change User Password</h1>
                <p class="mb-0 opacity-75">Enter old and new password for changing</p>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form>
                        <!-- Basic Information Section -->
                        <div class="mb-4">
                            <h4 class="text-primary mb-3">
                                <i class="bi bi-info-circle me-2"></i>
                                Change password
                            </h4>
                            <hr class="mb-4">

                            <div class="col">
                                <div class="col-md-6 mb-3">
                                    <label for="oldPass" class="form-label">
                                        Old Password <span class="text-danger">*</span>
                                    </label>
                                    <input type="password"
                                           @bind="oldPaswordInput"
                                           class="form-control"
                                           id="oldPass"
                                           placeholder="*******"
                                           required>
                                </div>
                                <div class="col">
                                    <div class="col-md-6 mb-3">
                                        <label for="newPass" class="form-label">
                                            New Password <span class="text-danger">*</span>
                                        </label>
                                        <input type="password"
                                               @bind="newPasswordInput"
                                               class="form-control"
                                               id="newPass"
                                               placeholder="*******"
                                               required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <button type="button" class="btn btn-primary w-50" @onclick="() => ChangePass()">
                                            <i class="bi bi-check-circle me-1"></i> Change
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    @* pabaiga *@

                </div>
            </div>

            <!-- Help Card -->
            <div class="card border-0 shadow-sm mt-4 bg-light">
                <div class="card-body">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-info-circle-fill text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <div>
                            <h5 class="mb-2">Note</h5>
                            <p class="text-muted mb-0">
                                Fields marked with <span class="text-danger">*</span> are required.
                                Make sure all information is accurate before saving.
                                You can edit this information later from the community management page.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (!string.IsNullOrWhiteSpace(alertMessage))
        {
            <div class="position-fixed top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center alert-bg">
                <div class="bg-white rounded shadow p-4" style="max-width: 500px; width: 90%;">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>@alertMessage</span>
                        <button type="button" class="btn btn-primary" @onclick="() => alertMessage = null">Close</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string oldPaswordInput;
    private string newPasswordInput;
    private string alertMessage;
    private ChangePasswordDTO data;
    private LoginResponseDTO userData;

    async Task ChangePass()
    {
        await GetUserData();

        var data = new ChangePasswordDTO
        {
            id = userData.user.Id,
            oldPassword = oldPaswordInput,
            newPassword = newPasswordInput
        };

        var response = await Http.PostAsJsonAsync("/Authentication/change", data);

        if(response.IsSuccessStatusCode)
        {
            alertMessage = "Password succesfully changed!";
        }
        else
        {
            alertMessage = "Failedto change password";
        }
    }

    protected async Task GetUserData()
    {
        var userDataJson = await JS.InvokeAsync<string>("auth.getUserData");

        if (!string.IsNullOrEmpty(userDataJson))
        {
            userData = JsonSerializer.Deserialize<LoginResponseDTO>(userDataJson);
        }
    }
}
