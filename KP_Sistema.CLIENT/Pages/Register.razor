@page "/register"
@layout UnauthorizedLayout
@using System.Text.Json
@inject AuthenticationService authenticationService
@inject HttpClient Http
@inject NavigationManager navigation
@inject IJSRuntime JS

<PageTitle>Login - Community Utility Services</PageTitle>

<div class="min-vh-100 d-flex align-items-center bg-light">
    <div class="container w-100">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="row shadow-lg rounded overflow-hidden bg-white">
                    <!-- Left Side - Login Form -->
                    <div class="col-lg-6 p-5">
                        <div class="mb-4">
                            <h2 class="fw-bold text-custom mb-2">Registration</h2>
                            <p class="text-muted">Become member of our ground breaking system!</p>
                        </div>

                        <form>
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-envelope"></i>
                                    </span>
                                    <input @bind="userNameInput"
                                           type="text"
                                           class="form-control border-start-0"
                                           id="username"
                                           placeholder="Enter your username"
                                           required>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="mail" class="form-label">EMail</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input @bind="mailInput"
                                           type="email"
                                           class="form-control border-start-0"
                                           id="mail"
                                           placeholder="Enter your Email: mailer@mail.com"
                                           required>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="userPassword" class="form-label">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input @bind="passwordInput"
                                           type="password"
                                           class="form-control border-start-0"
                                           id="userPassword"
                                           placeholder="Enter your password"
                                           required>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="rePassword" class="form-label">Repeat Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input @bind="rePasswordInput"
                                           type="password"
                                           class="form-control border-start-0"
                                           id="rePassword"
                                           placeholder="Repeat your password"
                                           required>
                                </div>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-custom btn-lg" @onclick="() => RegisterUser()">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Register
                                </button>
                            </div>

                            <div class="text-center">
                                <p class="text-muted mb-0">
                                    Don't have an account?
                                    <a href="/register" class="text-custom text-decoration-none fw-bold">Log In</a>
                                </p>
                            </div>
                        </form>
                    </div>

                    <!-- Right Side - Info Panel -->
                    <div class="col-lg-6 bg-custom text-white p-5 d-none d-lg-flex flex-column justify-content-center">
                        <div class="text-center mb-4">
                            <i class="bi bi-building" style="font-size: 5rem; opacity: 0.9;"></i>
                        </div>

                        <h3 class="fw-bold mb-4 text-center">Community Utility Services</h3>

                        <div class="mb-4">
                            <div class="d-flex align-items-start mb-3">
                                <div class="me-3">
                                    <i class="bi bi-check-circle-fill" style="font-size: 1.5rem;"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Manage All Services</h5>
                                    <p class="mb-0 opacity-75">Access all your utility services in one place</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-start mb-3">
                                <div class="me-3">
                                    <i class="bi bi-check-circle-fill" style="font-size: 1.5rem;"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Pay Bills Online</h5>
                                    <p class="mb-0 opacity-75">Quick and secure online payment options</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-start mb-3">
                                <div class="me-3">
                                    <i class="bi bi-check-circle-fill" style="font-size: 1.5rem;"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Stay Informed</h5>
                                    <p class="mb-0 opacity-75">Get updates about your community and services</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-start">
                                <div class="me-3">
                                    <i class="bi bi-check-circle-fill" style="font-size: 1.5rem;"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">24/7 Support</h5>
                                    <p class="mb-0 opacity-75">Our support team is always ready to help</p>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 p-3 bg-white bg-opacity-10 rounded">
                            <p class="mb-0 small">
                                <i class="bi bi-shield-check me-2"></i>
                                Your data is protected with enterprise-grade security
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Help Section -->
                <div class="text-center mt-4">
                    <p class="text-muted">
                        Need help?
                        <a href="/support" class="text-primary text-decoration-none">Contact Support</a>
                        <span class="mx-2">|</span>
                        <a href="/privacy" class="text-primary text-decoration-none">Privacy Policy</a>
                        <span class="mx-2">|</span>
                        <a href="/terms" class="text-primary text-decoration-none">Terms of Service</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    @if (!string.IsNullOrWhiteSpace(alertMessage))
    {
        <div class="position-fixed top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center alert-bg">
            <div class="bg-white rounded shadow p-4" style="max-width: 500px; width: 90%;">
                <div class="d-flex justify-content-between align-items-center">
                    <span>@alertMessage</span>
                    <button type="button" class="btn btn-primary" @onclick="() => alertMessage = null">Close</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private string userNameInput;
    private string mailInput;
    private string passwordInput;
    private string rePasswordInput;
    private string alertMessage;

    private async Task RegisterUser()
    {

        UserCreateDTO user = new UserCreateDTO
        {
            Username = userNameInput,
            Mail = mailInput,
            Password = passwordInput,
            RePassword = rePasswordInput
        };

        var response = await Http.PostAsJsonAsync("/Authentication/register", user);

        if(response.IsSuccessStatusCode)
        {
            navigation.NavigateTo("/login");
        }
        else
        {
            alertMessage = "Failerd to register!";
        }

    }

    private async Task<bool> isFieldsCorrect()
    {
        if (string.IsNullOrWhiteSpace(userNameInput) ||
           string.IsNullOrWhiteSpace(mailInput) ||
           string.IsNullOrWhiteSpace(passwordInput) ||
           string.IsNullOrWhiteSpace(rePasswordInput) ||
           !mailInput.Contains("@") ||
           passwordInput != rePasswordInput)
        {
            alertMessage = "Please fill all fields correctly!";
            return false;
        }

        return true;
    }

    protected override async Task OnInitializedAsync()
    {
        await JS.InvokeVoidAsync("auth.clearUserData");
        authenticationService.NotifyUserLogout();
    }
}