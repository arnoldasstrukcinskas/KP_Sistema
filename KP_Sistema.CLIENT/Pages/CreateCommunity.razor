@page "/communities/create"
@inject HttpClient Http

<PageTitle>Add Community - Community Utility Services</PageTitle>

<!-- Page Header -->
<div class="bg-custom text-white py-4 mb-4">
    <div class="container">
        <div class="d-flex align-items-center">
            <div>
                <h1 class="h2 mb-1">Add New Community</h1>
                <p class="mb-0 opacity-75">Create a new community in the system</p>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form>
                        <!-- Basic Information Section -->
                        <div class="mb-4">
                            <h4 class="text-primary mb-3">
                                <i class="bi bi-info-circle me-2"></i>
                                Community Create
                            </h4>
                            <hr class="mb-4">

                            <div class="col">
                                <div class="col-md-6 mb-3">
                                    <label for="communityName" class="form-label">
                                        Community Name <span class="text-danger">*</span>
                                    </label>
                                    <input type="text"
                                           @bind="communityName"
                                           class="form-control"
                                           id="communityId"
                                           placeholder="e.g., Greenwood Estates"
                                           required>
                                </div>
                                <div class="col">
                                    <div class="col-md-6 mb-3">
                                        <label for="communityAddress" class="form-label">
                                            Community Address <span class="text-danger">*</span>
                                        </label>
                                        <input type="text"
                                               @bind="communityAddress"
                                               class="form-control"
                                               id="communityId"
                                               placeholder="e.g., Greenwood Estates"
                                               required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <button type="button" class="btn btn-primary w-50" @onclick="AddCommunityToDb">
                                            <i class="bi bi-check-circle me-1"></i> Create
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    @* pabaiga *@

                </div>
            </div>

            <!-- Help Card -->
            <div class="card border-0 shadow-sm mt-4 bg-light">
                <div class="card-body">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <i class="bi bi-info-circle-fill text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <div>
                            <h5 class="mb-2">Note</h5>
                            <p class="text-muted mb-0">
                                Fields marked with <span class="text-danger">*</span> are required.
                                Make sure all information is accurate before saving.
                                You can edit this information later from the community management page.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (!string.IsNullOrWhiteSpace(alertMessage))
        {
            <div class="position-fixed top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center alert-bg">
                <div class="bg-white rounded shadow p-4" style="max-width: 500px; width: 90%;">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>@alertMessage</span>
                        <button type="button" class="btn btn-primary" @onclick="() => alertMessage = null">Close</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string? communityName;
    private string? communityAddress;
    private string? alertMessage;

    async Task AddCommunityToDb()
    {
        CommunityCreateDTO communityCreateDto = new CommunityCreateDTO
            {
                Name = communityName,
                Address = communityAddress
            };

        var response = await Http.PostAsJsonAsync("/Community", communityCreateDto);

        if(response.IsSuccessStatusCode)
        {
            alertMessage = $"Community with name - {communityName} created succesfully";
        }
        else
        {
            alertMessage = $"Failed to create community with name - {communityName}";
        }
    }
}