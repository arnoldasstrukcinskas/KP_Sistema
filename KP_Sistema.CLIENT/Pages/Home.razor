@page "/home"

<PageTitle>Home - Community Utility Services</PageTitle>

<!-- Welcome Banner -->
<div class="bg-custom pe-2 text-white py-4 mb-4">
    <div class="container ms-2">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="h2 mb-2">Welcome back, [User Name]!</h1>
                <p class="mb-0">
                    <i class="bi bi-geo-alt-fill me-1"></i>
                    <strong>Your Community:</strong> Greenwood Estates
                </p>
            </div>
            <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                <a href="/services" class="btn btn-light me-2">
                    <i class="bi bi-list-check me-1"></i> My Services
                </a>
                <a href="/profile" class="btn btn-outline-light">
                    <i class="bi bi-person-circle me-1"></i> Profile
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="container mb-4 ms-2">
    <div class="row g-3">
        <div class="col-md-3 col-6">
            <div class="card border-0 shadow-sm text-center h-100">
                <div class="card-body p-3">
                    <i class="bi bi-receipt text-primary" style="font-size: 2.5rem;"></i>
                    <h6 class="mt-2 mb-0">View Bills</h6>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card border-0 shadow-sm text-center h-100">
                <div class="card-body p-3">
                    <i class="bi bi-credit-card text-success" style="font-size: 2.5rem;"></i>
                    <h6 class="mt-2 mb-0">Pay Online</h6>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card border-0 shadow-sm text-center h-100">
                <div class="card-body p-3">
                    <i class="bi bi-tools text-warning" style="font-size: 2.5rem;"></i>
                    <h6 class="mt-2 mb-0">Request Service</h6>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card border-0 shadow-sm text-center h-100">
                <div class="card-body p-3">
                    <i class="bi bi-clock-history text-info" style="font-size: 2.5rem;"></i>
                    <h6 class="mt-2 mb-0">History</h6>
                </div>
            </div>
        </div>
    </div>
</div>

